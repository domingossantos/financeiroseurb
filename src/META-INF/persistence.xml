<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">
    <persistence-unit name="seurbPU" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <class>br.com.cinbesa.seurb.model.TblDam</class>

        <properties>
            <property name="hibernate.connection.url"
                      value="jdbc:postgresql://localhost:5432/seurb" />
            <property name="hibernate.connection.username" value="postgres"/>
            <property name="hibernate.connection.password" value="passwd"/>
            <property name="hibernate.jdbc.lob.non_contextual_creation" value="true"/>

            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.PostgreSQL9Dialect" />

            <property name="hibernate.show_sql" value="true" />
            <property name="hibernate.format_sql" value="false"/>
            <property name="hibernate.connection.driver_class" value="org.postgresql.Driver"/>
        </properties>
    </persistence-unit>

</persistence>
